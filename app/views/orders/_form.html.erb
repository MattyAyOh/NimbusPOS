<%= form_for [@service, @order] do |f| %>
  <div class = 'field'>
    <%= f.label :start_time %><br/>
    <%= f.time_field :start_time %>
  </div>
  <div class = 'field'>
    <%= f.label :end_time %><br/>
    <%= f.time_field :end_time %><br/>
  </div>
  <h1>Extras</h1>
    <div id = 'order-extras'>
      <%= f.fields_for :order_extras do |oe| %>
        <%= render 'order_extra_fields', f: oe %>
      <% end %>
      <div class = 'links'>
        <%= link_to_add_association 'Add Extra', f, :order_extras %>
      </div>
    </div><br/>
  <div class = 'field'>
    Previous Charge <%= f.number_field :previous_cost, :step => 0.01 %>
  </div>
  <%= f.submit %>
<% end %>
